{
    "mcpServers": {
        "git": {
            "command": "uvx",
            "args": ["mcp-server-git", "--repository", "."]
        },
        "filesystem": {
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-filesystem", "."]
        },
        "reddit": {
            "command": "uvx",
            "args": ["mcp-server-reddit"]
        },
        "memory": {
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-memory"],
            "env": {
                "MEMORY_FILE_PATH": "./memory-mcp/memory.jsonl"
            }
        },
        "sequential-thinking": {
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
            "env": {
                "DISABLE_THOUGHT_LOGGING": "false"
            }
        },
        "fetch": {
            "command": "uvx",
            "args": ["mcp-server-fetch"],
            "env": {
                "PYTHONIOENCODING": "utf-8"
            }
        },
        "time": {
            "command": "uvx",
            "args": ["mcp-server-time"],
            "env": {
                "LOCAL_TIMEZONE": "Asia/Tokyo"
            }
        },
        "wikipedia": {
            "command": "uvx",
            "args": ["wikipedia-mcp"]
        },
        "notion": {
            "command": "npx",
            "args": ["-y", "@ramidecodes/mcp-server-notion@latest"],
            "env": {
                "NOTION_API_KEY": "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"
            }
        },
        "sec-edgar-mcp": {
            "command": "uvx",
            "args": ["sec-edgar-mcp"],
            "env": {
                "SEC_EDGAR_USER_AGENT": "Yuki Hata (youxitiankaggle@gmail.com)"
            }
        },
        "rss": {
            "command": "uv",
            "args": ["run", "rss-mcp"],
            "env": {
                "RSS_DATA_DIR": "./data/raw/rss"
            }
        },
        "slack": {
            "command": "uvx",
            "args": ["mcp-slack"],
            "env": {
                "SLACK_BOT_TOKEN": "xoxb-10037291992179-10284587908951-THCxkuDGUjh7Wth1GEAhMAX5"
            }
        },
        "context7": {
            "command": "npx",
            "args": ["-y", "@upstash/context7-mcp@latest"]
        },
        "tavily": {
            "command": "npx",
            "args": ["-y", "tavily-mcp"],
            "env": {
                "TAVILY_API_KEY": "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"
            }
        }
    }
}
